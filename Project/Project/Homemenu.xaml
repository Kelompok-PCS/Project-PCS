            <Label x:Name="nmenu" Content="" HorizontalAlignment="Left" Height="30" Margin="125,25,0,0" Grid.Row="2" VerticalAlignment="Top" Width="110"/>
            <Label x:Name="hmenu" Content="" HorizontalAlignment="Left" Height="30" Margin="125,55,0,0" Grid.Row="2" VerticalAlignment="Top" Width="110"/>
            <Label x:Name="dmenu" Content="" HorizontalAlignment="Left" Height="54" Margin="10,120,0,0" Grid.Row="2" VerticalAlignment="Top" Width="295" Grid.RowSpan="2"/>
        </Grid>
        <Label Content="Menu" HorizontalAlignment="Center" Margin="30,10,0,0" VerticalAlignment="Top" Width="140" FontSize="16" FontWeight="Bold"/>
        <Rectangle HorizontalAlignment="Left" Height="419" Margin="460,0,0,0" Stroke="Black" VerticalAlignment="Top" Width="10" Fill="#FFF3A00E"/>


    </Grid>
</Window>
